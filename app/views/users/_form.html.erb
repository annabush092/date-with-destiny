<%  if @user.errors.any? %>
  <% @user.errors.full_messages.each do |m| %>
  <%= m %><br>
  <% end %>
<% end %>


<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit %>

<% end %>
